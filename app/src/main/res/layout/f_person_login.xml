<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/f_login_myImage"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dip"
            android:background="@mipmap/head" />

        <EditText
            android:id="@+id/f_login_admin"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/f_login_myImage"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="15dip"
            android:inputType="number"
            android:paddingLeft="50dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/f_login_admin"
            android:layout_alignTop="@id/f_login_admin"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="9dip"
            android:text="账号"
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/f_login_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/f_login_admin"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:paddingLeft="50dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/f_login_password"
            android:layout_alignTop="@id/f_login_password"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="9dip"
            android:text="密码"
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt" />

        <Button
            android:id="@+id/f_login_xlogin"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_alignLeft="@id/f_login_admin"
            android:layout_alignRight="@id/f_login_admin"
            android:layout_below="@id/f_login_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:text="登录"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/f_login_fetchPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/login"
            android:layout_marginLeft="45dip"
            android:gravity="bottom"
            android:text="找回密码"
            android:textColor="@android:color/white"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/f_login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/login"
            android:layout_marginRight="45dip"
            android:layout_marginTop="5dip"
            android:gravity="bottom"
            android:text="注册账号"
            android:textColor="@android:color/white"
            android:textSize="7pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/login"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:text="|"
            android:textSize="7pt" />

    </RelativeLayout>
</LinearLayout>