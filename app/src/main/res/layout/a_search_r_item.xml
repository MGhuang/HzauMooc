<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.feidian.george.hzaumooc.View.RoundRectImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/search_r_item_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:type="circle"
        app:borderRadius="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/search_r_item_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魅力汉语"
            android:textColor="#D50000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/search_r_item_teachername"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#50000000"
            android:text="教师"/>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
            <TextView
                android:text="来自于："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/search_r_item_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>