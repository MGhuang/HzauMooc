<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#009688"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/set"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@mipmap/set"/>
        <com.feidian.george.hzaumooc.View.CircleImageView
            android:id="@+id/head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/head"/>
        <TextView
            android:id="@+id/name"
            android:layout_below="@id/head"
            android:text="登陆"
            android:clickable="true"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#d8e0e8"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <LinearLayout
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/admin"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="我的账号"/>
        <TextView
            android:id="@+id/admin_text"
            android:paddingLeft="100dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"/>

    </LinearLayout>
    <View
        android:background="#d8e0e8"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <LinearLayout
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_click"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/record"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="历史纪录"/>
        <ImageView
            android:src="@mipmap/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="220dp"/>
    </LinearLayout>
    <View
        android:background="#d8e0e8"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <LinearLayout
        android:id="@+id/suggest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_click"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/suggest"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="意见反馈"/>
        <ImageView
            android:src="@mipmap/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="220dp"/>
    </LinearLayout>
    <View
        android:background="#d8e0e8"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <LinearLayout
        android:id="@+id/out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_click"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/out"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="退出登录"/>
        <ImageView
            android:src="@mipmap/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="220dp"/>
    </LinearLayout>
    <View
        android:background="#d8e0e8"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
</LinearLayout>
